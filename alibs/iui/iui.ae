(macro iui-vbox [margin-x margin-y spacing ...body]
  (iui-vbox margin-x margin-y spacing(fun [] body)))

(macro iui-hbox [margin-x margin-y spacing ...body]
  (iui-hbox margin-x margin-y spacing(fun [] body)))

(macro iui-button [text ...body]
  (iui-button text (fun [] body)))

(macro iui-text [text center]
  (iui-text text center))
